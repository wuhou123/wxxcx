.input-area {
  margin-top: 5px;
  margin-bottom: 5px;
  padding: 10px;
  background-color: white;
  border-radius: 2%;
}

.input-area .field-wrap {
  border: 1px solid #03a9f4;
}

.input-area .btn-area {
  width: 100%;
  margin-top: 20px;
  display: flex;
  justify-content: space-around;
}

.banner-ad-area {
  margin-bottom: 2px;
  /* padding: 10px; */
  background-color: white;
  border-radius: 2%;
  z-index: 0;
}

.entrance-area {
  margin-top: 5px;
  margin-bottom: 5px;
  /* padding: 10px; */
  background-color: white;
}

.share-area {
  margin-top: 5px;
  margin-bottom: 5px;
  padding: 10px;
  background-color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.footer-area {
  margin: 10px;
  padding: 5px;
  background-color: white;
  border-radius: 2%;
}

.tip-area {
  margin-bottom: 5px;
  background-color: thistle;
  padding: 5px;
  font-size: 12px;
  border-radius: 2%;
}

.help-area {
  margin: 10px;
  /* padding: 10px; */
  /* background-color: white;
  border-radius: 2%; */
}

.help-area .btn {
  margin: 10px 5px;
}

.help-area .share-btn {
  color: red;
}

.help-area .btn-2 {
  display: flex;
  justify-content: space-around;
}

