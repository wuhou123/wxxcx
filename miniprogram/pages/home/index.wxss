}

#van-dialog {
  z-index: 1000;
}

.progress-area {
  margin-bottom: 5px;
  padding: 10px;
  background-color: white;
}

.video-area {
  display: flex;
  flex-direction: column;
  padding: 10px;
  background-color: white;
  border-radius: 2%;
  align-items: center;
}

.video-area .save-btn-area {
  width: 80%;
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding-bottom: 10px;
}

.video-area video {
  width: 100%;
  height: 200px;
}

.video-area .copy-btn-area {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding-top: 10px;
  padding-bottom: 10px;
}

.popup-content {
  padding-left: 20px;
  padding-right: 20px;
  padding-bottom: 20px;
  display: flex;
  flex-direction: column;
  background-color: #efefef;
}

.popup-content .title {
  line-height: 60px;
  font-size: 18px;
  font-weight: bold;
  text-align: center;
}

.popup-content .content {
  background-color: white;
  padding: 10px;
  border-radius: 10px;
  margin-bottom: 20px;
}

.popup-content .content .t {
  font-weight: bold;
  font-size: 16px;
  line-height: 30px;
}

.popup-content .content .c {
  font-size: 14px;
  line-height: 25px;
  color: #666;
}

.popup-content .why {
  background-color: white;
  padding: 10px;
  border-radius: 10px;
  margin-top: 20px;
  font-size: 13px;
  color: #666;
}

.official-area {
  padding-left: 10px;
  padding-right: 10px;
}
