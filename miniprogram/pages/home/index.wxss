.header-area {
  padding-right: 15px;
  padding-top: 5px;
  padding-bottom: 5px;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.notice-bar-area {
  margin-bottom: 0px;
}

.notice-bar {
  background-color: #fa5151 !important;
  font-size: 1rem;
}

.user-info-area {
  padding: 10px;
  margin-bottom: 5px;
  background-color: white;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.user-info-area .user-info {
  font-size: 13px;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.user-info-area .user-info .avatar {
  box-sizing: border-box;
  width: 50px;
  height: 50px;
  display: flex;
  border-radius: 50%;
  overflow: hidden;
}
