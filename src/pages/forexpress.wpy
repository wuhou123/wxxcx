</template>

<script>
import wepy from 'wepy';
import { formatTime } from '@/utils/util';

export default class Forexpress extends wepy.page {
  config = {
    navigationBarTitleText: '快递查询'
  };

  data = {
    showMark: false,
    baseUrl: 'https://qf-restapi.mdscj.com/xp_express',
    getExpressType: '/logistics/company/list',
    getExpressMessage: '/logistics/search',
    getExpressAllType: '/logistics/company-by-sort',
    geMessageNoType: '/logistics/query',
    geMessageMD: '/logistics/query-product-logisticsno',
    hotMatch: '/logistics/query-company-quickly',
    getExpressBy100: '/kuaidi100/query',
    getCompanyBy100: '/kuaidi100/query-company-quickly',
    expressValue: '',
    delStatus: false,
    chosseIndex: -1,
    history: [],
    animationData: {},
    winHeight: '', //窗口高度
    currentTab: 0, //预设当前项的值
    scrollLeft: 0 //tab标题的滚动条位置
  };

  methods = {
    switchTab: function(e) {
      this.currentTab = e.detail.current;
      this.$apply();
      this.methods.checkCor.call(this);
    },
    // 点击标题切换当前页时改变样式
    swichNav: function(e) {
      var cur = e.target.dataset.current;
      if (this.data.currentTaB == cur) {
        return false;
      } else {
        this.currentTab = cur;
      }
    },
    //判断当前滚动超过一屏时，设置tab标题滚动条。
    checkCor: function() {
      if (this.data.currentTab > 3) {
        this.scrollLeft = 300;
      } else {
        this.scrollLeft = 0;
      }
    },
    goToGame() {
      this.$navigate({
        url: './game/index'
      });
    },
    inputExpress(e) {
      // console.log(e)
      let val = e.detail.value.trim();
      if (val !== '') {
        val = val.replace(/<\/?[^>]*>/g, '');
      }
      this.expressValue = val;
    },
    /**
     * 搜索快递单号
     */
    searchExpress() {
      let number = this.expressValue;
      number = number.replace(/\s+/g, '');
      if (number.length === 0) return;
      this.$navigate({
        url: './expressJump/expressJump?number=' + number
      });
    },
    /**
     * 调用微信扫码
     */
    scanExpressCode() {
      let that = this;
      wx.scanCode({
        onlyFromCamera: false,
        success(res) {
          let realdata = res.result || '';
          if (realdata && realdata.includes('.com')) {
            let forone = realdata.split('?') ? realdata.split('?')[1] : '';
            let fortwo = forone.split('?') ? forone.split('=')[1] : '';
            that.expressValue = fortwo;
            that.$apply();
            that.methods.searchExpress.call(that);
            return;
          }
          that.expressValue = realdata;
          that.$apply();
          that.methods.searchExpress.call(that);
        },
        fail(res) {
          wx.showModal({
            tilte: '扫码失败',
            content: '请重试',
            showCancel: false
          });
        }
      });
    },
    /**
     * 打电话
     * @param e
     */
    call(e) {
      wx.makePhoneCall({
        phoneNumber: e.currentTarget.dataset.phone
      });
    },
    /**
     * 查询详细内容
     * @param e
     */
    goToExpress(e) {
      console.log(e);
      let number = e.currentTarget.dataset.number;
      this.$navigate({
        url: './expressJump/expressJump?number=' + number
      });
    },
    /**
     * 删除记录
     */
    delete(e) {
      let that = this;
      if (this.delStatus) return;
      this.delStatus = true;
      let index = e.currentTarget.dataset.index;
      let history = this.data.history;
      this.chosseIndex = index;

      setTimeout(function() {
        history.splice(index, 1);
        wx.setStorageSync('saveList', history);
        that.history = wx.getStorageSync('saveList');
        that.delStatus = false;
        that.chosseIndex = -1;
        that.$apply();
      }, 1200);
    },
    onGotUserInfo(e) {
      if (e.detail.userInfo) {
        this.showMark = false;
        wx.setStorage({
          key: 'user',
          data: e.detail.userInfo
        });
      }
    },
    onShareAppMessage() {
      return {
        title: '武侯的猫-打造最简小工具',
        path: 'pages/forexpress',
        success(res) {
          console.log(res);
        },
        fail(res) {
          console.log(res);
        }
      };
    }
  };
  onLoad() {
    let that = this;
    //动画
    var animation = wx.createAnimation({
      duration: 1200,
      timingFunction: 'linear'
    });

    this.animation = animation;

    // animation.scale(2, 2).rotate(45).step()

    this.setData({
      animationData: animation.export()
    });
    try {
      var res = wx.getSystemInfoSync();
      //start
      var clientHeight = res.windowHeight,      
        clientWidth = res.windowWidth,
        rpxR = 750 / clientWidth;
      var calc = (clientHeight - 1/rpxR*80)*rpxR;
      console.log(calc);
      this.winHeight = calc;
      //end
      var width = res.windowWidth; //画布宽度
      let setwidth = res.windowWidth / 2 - 25;
      setTimeout(() => {
        that.animation
          .opacity(0.5)
          .step()
          .translateY(150)
          .translateX(setwidth)
          .rotateX(720)
          .opacity(1)
          .step();
        that.setData({
          animationData: that.animation.export()
        });
      }, 500);
    } catch (e) {
      console.log('获取设备信息失败' + e);
    }
  }

  onShow() {
    let self = this;
    try {
      var res = wx.getStorageSync('user');
      console.log(res);
      if (res) this.showMark = false;
      if (!res) this.showMark = true;
      self.$apply();
    } catch (e) {
      this.showMark = true;
    }
    this.history = wx.getStorageSync('saveList');
    this.$apply();
  }
}
</script>

