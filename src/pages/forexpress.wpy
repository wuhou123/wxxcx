      <image src="http://osk1hpe2y.bkt.clouddn.com/18-5-30/34559443.jpg"></image>
    </view>
    <button open-type="getUserInfo" lang="zh_CN" @getuserinfo="onGotUserInfo" class="css-button">开始吧!</button>
  </view>
  <!-- test-tab -->
  <view>
    <scroll-view scroll-x="true" class="tab-h" scroll-left="{{scrollLeft}}">
      <view class="tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap="swichNav">快递</view>
      <view class="tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="swichNav">身份证</view>
      <view class="tab-item {{currentTab==2?'active':''}}" data-current="2" bindtap="swichNav">银行卡号</view>
      <view class="tab-item {{currentTab==3?'active':''}}" data-current="3" bindtap="swichNav">手机号码</view>
      <view class="tab-item {{currentTab==4?'active':''}}" data-current="4" bindtap="swichNav">身材计算</view>
      <view class="tab-item {{currentTab==5?'active':''}}" data-current="5" bindtap="swichNav">青葱</view>
      <view class="tab-item {{currentTab==6?'active':''}}" data-current="6" bindtap="swichNav">全部</view>
      <view class="tab-item {{currentTab==7?'active':''}}" data-current="7" bindtap="swichNav">其他</view>
    </scroll-view>
    <swiper class="tab-content" current="{{currentTab}}" duration="300" bindchange="switchTab" style="height:{{winHeight}}rpx">
      <!-- 快递查询 -->
      <swiper-item wx:for="{{[0,1,2,3,4,5,6,7]}}" wx:key="*this">
        <scroll-view scroll-y="true" class="scoll-h" wx:if="{{index==0}}">
          <view class="container">
            <view class="express-img-wrap">
              <text class="save" @tap="goToGame">摇骰子</text>
              <image class='express-img' src='../images/timg.gif'></image>
            </view>
            <!--快递入口-->
            <view class="express-input-wrap iconfont icon-sousuo-copy">
              <input bindblur="searchExpress" class="express-input" bindinput="inputExpress" confirm-type="done" placeholder="请输入或扫码您的快递单号" value="{{ expressValue}}" />
              <view catchtap='scanExpressCode' class="icon iconfont icon-saoma"></view>
            </view>
            <!--历史记录-->
            <view class="history {{ index === chosseIndex ? 'del' : '' }}" data-number="{{ item.nubmer }}" catchtap='goToExpress' wx:for='{{ history }}' wx:key="unique">
              <view class='info-wrap'>
                <view class="company">{{ item.company }}</view>
                <view class="number">{{ item.nubmer }}</view>
              </view>
              <view class="last-info-wrap">
                <view class="time">{{ item.traces.acceptTime }}</view>
                <view class="content">{{ item.traces.acceptStation }}</view>
              </view>
              <view wx:if="{{ item.traces.phone }}" catchtap='call' class="phone iconfont icon-dianhua1" data-phone="{{ item.traces.phone }}"></view>
              <view class="delete iconfont icon-lajitong_kuai" data-index="{{ index }}" catchtap='delete'></view>
            </view>
          </view>
        </scroll-view>
        <scroll-view scroll-y="true" class="scoll-h" wx:else>
          <block wx:for="{{[1,2,3,4,5,6,7,8]}}" wx:key="*this">
            <view>测试</view>
          </block>
        </scroll-view>
